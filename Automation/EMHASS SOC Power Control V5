alias: EMH SOC Power Control V5
description: SOC and Power control Huawei battery with emhass
triggers:
  - trigger: state
    entity_id:
      - sensor.soc_batt_forecast
    attribute: battery_scheduled_soc
    id: SOC Forecast
  - trigger: state
    entity_id:
      - sensor.limited_power
    id: Power Forecast
  - entity_id:
      - sensor.emhass_battery_mode
    trigger: state
    id: EMHASS Battery Mode
    to: null
    for:
      hours: 0
      minutes: 0
      seconds: 3
conditions:
  - condition: state
    entity_id: switch.predbat_set_read_only
    state: "on"
actions:
  - choose:
      - conditions:
          - condition: state
            entity_id: sensor.emhass_battery_mode
            state: Follow Grid
            enabled: true
        sequence:
          - choose:
              - conditions:
                  - condition: numeric_state
                    entity_id: sensor.go_echarger_265216_nrg_12
                    above: 100
                sequence:
                  - action: >-
                      script.huawei_solar_stop_fcfdc_power_0w_export_5000w_import
                    metadata: {}
                    data: {}
                alias: "Chaging car "
              - conditions:
                  - condition: numeric_state
                    entity_id: sensor.go_echarger_265216_nrg_12
                    below: 5
                sequence:
                  - action: script.huawei_solar_stop_fcfdc_power_5000w
                    metadata: {}
                    data: {}
                alias: Not Charging Car
        alias: EMHASS (STOP) FDCFC Follow grid
      - conditions:
          - condition: state
            entity_id: sensor.emhass_battery_mode
            state: Idle
            enabled: true
        sequence:
          - action: script.huawei_solar_stop_fcfdc_power_0w
            metadata: {}
            data: {}
          - delay:
              hours: 0
              minutes: 0
              seconds: 5
              milliseconds: 0
          - if:
              - condition: sun
                after: sunrise
                before: sunset
              - condition: time
                after: "09:00:00"
                before: "20:00:00"
              - condition: state
                entity_id: sensor.season
                state: summer
            then:
              - action: script.huawei_charging_power_250w
                metadata: {}
                data: {}
        alias: EMHASS (STOP) FDCFC Idle
      - conditions:
          - condition: and
            conditions:
              - condition: state
                entity_id: sensor.emhass_battery_mode
                state: Forcible Discharge
              - condition: numeric_state
                entity_id: sensor.battery_state_of_capacity
                above: sensor.soc_batt_forecast
            alias: " If EMHASS Battery Mode is Forcible Discharge"
        sequence:
          - if:
              - condition: numeric_state
                entity_id: sensor.soc_batt_forecast
                below: 12
            then:
              - action: huawei_solar.forcible_discharge
                metadata: {}
                data:
                  duration: 120
                  power: "5000"
                  device_id: 6893ee838a0972bd3e50d9e0faa0ba5a
              - delay:
                  hours: 0
                  minutes: 0
                  seconds: 3
                  milliseconds: 0
              - action: script.emhass_discharge_mode_2
                metadata: {}
                data: {}
            else:
              - data:
                  target_soc: >-
                    {% set value = states('sensor.soc_batt_forecast') | int(0)
                    %} {{ value if value >= 12 else 12 }}
                  power: "5000"
                  device_id: 6893ee838a0972bd3e50d9e0faa0ba5a
                action: huawei_solar.forcible_discharge_soc
              - delay:
                  hours: 0
                  minutes: 0
                  seconds: 3
                  milliseconds: 0
              - action: script.emhass_discharge_mode_2
                metadata: {}
                data: {}
        alias: EMHASS (Discharge) FDC
      - conditions:
          - condition: numeric_state
            entity_id: sensor.battery_state_of_capacity
            below: 97
            enabled: true
          - condition: and
            conditions:
              - condition: numeric_state
                entity_id: sensor.p_batt_forecast
                below: -50
              - condition: state
                entity_id: sensor.emhass_battery_mode
                state: Forcible Charge
        sequence:
          - action: huawei_solar.forcible_charge_soc
            data:
              target_soc: >-
                {% set value = states('sensor.soc_batt_forecast') | int(0) %} {{
                value if value >= 12 else 12 }}
              power: "5000"
              device_id: 6893ee838a0972bd3e50d9e0faa0ba5a
          - delay:
              hours: 0
              minutes: 0
              seconds: 3
              milliseconds: 0
          - alias: Time 07:00-22:30 and 22:30-07:00
            choose:
              - conditions:
                  - condition: time
                    after: "22:30:00"
                    before: "07:00:00"
                sequence:
                  - if:
                      - condition: numeric_state
                        entity_id: sensor.p_deferrable0
                        above: 50
                    then:
                      - action: script.huawei_charge_limited_power_max3500w
                        metadata: {}
                        data: {}
                    enabled: true
                    else:
                      - action: script.emhass_charge_mode_2
                        metadata: {}
                        data: {}
                  - delay:
                      hours: 0
                      minutes: 0
                      seconds: 3
                      milliseconds: 0
                  - action: script.huawei_discharging_power_0w
                    data: {}
              - conditions:
                  - condition: time
                    after: "07:00:00"
                    before: "22:30:00"
                sequence:
                  - if:
                      - condition: numeric_state
                        entity_id: sensor.p_deferrable0
                        above: 50
                    then:
                      - action: script.huawei_charge_limited_power_max3500w
                        metadata: {}
                        data: {}
                        enabled: true
                    enabled: true
                    else:
                      - action: script.emhass_charge_mode_2
                        metadata: {}
                        data: {}
                  - delay:
                      hours: 0
                      minutes: 0
                      seconds: 3
                      milliseconds: 0
                  - action: script.huawei_discharging_power_0w
                    data: {}
        alias: EMHASS (Charge) FC
  - if:
      - condition: trigger
        id:
          - EMHASS Battery Mode
      - condition: state
        entity_id: input_boolean.emhass_notify
        state: "on"
    then:
      - action: notify.mobile_app_iphone13pro
        metadata: {}
        data:
          message: Battery {{ states('sensor.emhass_battery_mode') }}
          title: Battery
mode: restart
